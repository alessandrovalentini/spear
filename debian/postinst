#!/bin/sh
set -e

VENV_DIR=/usr/share/spear/venv

if ! command -v python3 >/dev/null 2>&1; then
    echo "Python3 not found. Install python3 and python3-venv." >&2
    exit 1
fi

if [ ! -d "$VENV_DIR" ]; then
    python3 -m venv "$VENV_DIR"
fi

"$VENV_DIR/bin/pip" install --upgrade pip
"$VENV_DIR/bin/pip" install -r /usr/share/spear/requirements.txt

if command -v systemctl >/dev/null 2>&1; then
    systemctl daemon-reload
    systemctl enable spear.service || true
fi

exit 0
